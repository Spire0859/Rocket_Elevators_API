<div class = "container">
  <p id="notice"><%= notice %></p>

  <h1>Leads</h1>

  <table class = "container table table-hover table-bordered table-striped" >
    <thead class ="thead-dark">
      <tr>
        <th>Fullnamecontact</th>
        <th>Companyname</th>
        <th>Email</th>
        <th>Phonenumber</th>
        <th>Nameproject</th>
        <th>Descriptionproject</th>
        <th>Department</th>
        <th>Message</th>
        <th>File</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>

        <tr>
          <td><%= lead.fullNameContact %></td>
          <td><%= lead.companyName %></td>
          <td><%= lead.email %></td>
          <td><%= lead.phoneNumber %></td>
          <td><%= lead.nameProject %></td>
          <td><%= lead.descriptionProject %></td>
          <td><%= lead.department %></td>
          <td><%= lead.message %></td>
          <td><%= lead.file %></td>
          <td><%= lead.date %></td>
          <td><%= link_to 'Show', lead %></td>
          <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
          <th><%= link_to 'convert to customer', lead_url(lead) %></td>
          <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Lead', new_lead_path %>
</div>